<!-- views/home.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PedeMath</title>
  <!-- Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include('../partials/navbar.ejs') %>
  <div class="container my-5">

    <h1 class="mb-4">Data Kuis</h1>
    <div class="table-responsive">
      <table class="table text-center">
        <thead class="thead-light">
          <tr>
            <th scope="col" width="5%">#</th>
            <th scope="col">Soal</th>
            <th scope="col">Level</th>
            <th scope="col" width="10%">Bilangan 1</th>
            <th scope="col" width="10%">Operasi</th>
            <th scope="col" width="10%">Bilangan 2</th>
            <th scope="col" width="10%">Jawaban</th>
            <th scope="col" width="20%">Tindakan</th>
          </tr>
        </thead>
        <tbody>
          <% kuises.forEach((kuis, i)=> { %>
            <tr>
              <td>
                <%= i+1 %>
              </td>
              <td>
                <%= kuis.nama %>
              </td>
              <td>
                Level <%= kuis.level_id %>
              </td>
              <td>
                <%= kuis.soal_atas %>
              </td>
              <td>
                <%= kuis.operasi %>
              </td>
              <td>
                <%= kuis.soal_bawah %>
              </td>
              <td>
                <%= kuis.jawaban %>
              </td>
              <td>
                <button type="button" class="btn btn-outline-success btn-sm" data-toggle="modal" data-target="#editModal"
                  data-id="<%= kuis.id %>">Edit</button>
                <button type="button" class="btn btn-outline-danger btn-sm" data-toggle="modal" data-target="#deleteModal"
                  data-id="<%= kuis.id %>">Delete</button>
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Edit Modal -->
  <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editModalLabel">Edit kuis</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="editkuisId">
          <!-- Form edit data pengguna disini -->
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="saveEditButton">Save changes</button>
        </div>
      </div>
    </div>
  </div>


  <!-- Delete Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
    aria-hidden="true">
    <!-- Konten modal disini -->
  </div>

  <!-- Bootstrap JS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>